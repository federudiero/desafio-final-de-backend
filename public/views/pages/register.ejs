<%- include('../partials/header.ejs', { title: 'Register - Electro-Life', showNavbar: false }); -%>

<main>
  <section class="register" style="background-color: #2e3338; height: 700px;">
    <div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
      <div class="text-white bg-dark" style="width: 600px; padding: 4rem 3rem; border-radius: 2rem;">
        <div class="text-center mb-5">
          <h2>Registrarse</h2>
        </div>
        <div class="mb-4">
          <form action="/auth/register" method="POST" >
            
            <div class="col-md-6 mb-4">
                <label class="form-label" for="username">Nombre de Usuario</label>
                <input class="form-control" type="text" id="username" name="username" style="width: 500px;">
            </div>
            
            <div class="col-md-6 mb-4">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" id="email" name="email" style="width: 500px;">
            </div>
            
            
            <div class="col-md-6 mb-4">
                <label class="form-label" for="age">Edad</label>
                <input class="form-control" type="number" id="age" name="age" style="width: 500px;">
            </div>
              
            <div class="col-md-6 mb-4">
                <label class="form-label" for="address">Dirección</label>
                <input class="form-control" type="text" id="address" name="address" style="width: 500px;">
            </div>
            
            
            <div class="col-md-6 mb-4">
                <label class="form-label" for="phone">Teléfono</label>
                <input class="form-control" type="number" id="phone" name="phone" style="width: 500px;">
            </div>
            
            <div class="col-md-6 mb-4">
              <label class="form-label" for="password">Contraseña</label>
              <input class="form-control" type="password" id="password" name="password" style="width: 500px;">
            </div>
            
            <button  class="btn btn-primary w-100">Register</button>
          </form>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer.ejs', { showFooter: false }); -%>